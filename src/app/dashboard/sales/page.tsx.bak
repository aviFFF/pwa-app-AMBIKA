"use client";

import { useState, useEffect, useRef } from "react";
import { format } from "date-fns";

interface Order {
  _id: string;
  order_id: string;
  date: string;
  customer_name: string;
  total_amount: number;
  status: string;
  estimate_id?: string;
  items?: OrderItem[];
}

interface Product {
  _id: string;
  code: string;
  name: string;
  size?: string;
  category: string;
  supplier: string;
  price: number;
}

interface Inventory {
  _id: string;
  product_code: string;
  product_name: string;
  available_quantity: number;
  last_updated: string;
}

interface Customer {
  _id: string;
  name: string;
  contact: string;
  customer_ref_id: string;
  agent: string;
}

interface OrderItem {
  id: number;
  product_code: string;
  product_name: string;
  category: string;
  size: string;
  quantity: number;
  rate: number;
  total: number;
}

interface Estimate {
  _id: string;
  estimate_id: string;
  order_id: string;
  date: string;
  customer_name: string;
  agent_name: string;
  total_items: number;
  total_amount: number;
  status: string;
  items: OrderItem[];
}

export default function SalesPage() {
  const [activeTab, setActiveTab] = useState<"orders" | "estimates">("orders");
  const [orders, setOrders] = useState<Order[]>([]);
  const [filteredOrders, setFilteredOrders] = useState<Order[]>([]);
  const [estimates, setEstimates] = useState<Estimate[]>([]);
  const [filteredEstimates, setFilteredEstimates] = useState<Estimate[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState("");
  const [searchTerm, setSearchTerm] = useState("");
  
  // New Order State
  const [showOrderModal, setShowOrderModal] = useState(false);
  const [newOrderId, setNewOrderId] = useState("");
  const [orderDate, setOrderDate] = useState(format(new Date(), "yyyy-MM-dd"));
  const [agentName, setAgentName] = useState("Admin User");
  const [customerName, setCustomerName] = useState("");
  const [orderItems, setOrderItems] = useState<OrderItem[]>([
    { id: 1, product_code: "", product_name: "", category: "", size: "", quantity: 0, rate: 0, total: 0 }
  ]);
  const [products, setProducts] = useState<Product[]>([]);
  const [inventory, setInventory] = useState<Inventory[]>([]);
  const [customers, setCustomers] = useState<Customer[]>([]);
  const [isSaving, setIsSaving] = useState(false);
  const [orderError, setOrderError] = useState("");
  const [nextId, setNextId] = useState(2);

  // Order view and edit state
  const [showViewOrderModal, setShowViewOrderModal] = useState(false);
  const [viewOrderData, setViewOrderData] = useState<Order | null>(null);
  const [showEditOrderModal, setShowEditOrderModal] = useState(false);
  const [editOrderData, setEditOrderData] = useState<Order | null>(null);
  const [isUpdating, setIsUpdating] = useState(false);

  // Estimate state
  const [currentOrder, setCurrentOrder] = useState<Order | null>(null);
  const [isGeneratingEstimate, setIsGeneratingEstimate] = useState(false);
  
  // Estimate view and edit state
  const [showViewEstimateModal, setShowViewEstimateModal] = useState(false);
  const [viewEstimateData, setViewEstimateData] = useState<Estimate | null>(null);
  const [showEditEstimateModal, setShowEditEstimateModal] = useState(false);
  const [editEstimateData, setEditEstimateData] = useState<Estimate | null>(null);
  const [isEditingEstimate, setIsEditingEstimate] = useState(false);

  useEffect(() => {
    if (activeTab === "orders") {
      loadOrders();
    } else if (activeTab === "estimates") {
      loadEstimates();
    }
  }, [activeTab]);

  useEffect(() => {
    if (orders.length > 0 && activeTab === "orders") {
      filterOrders();
    }
  }, [orders, searchTerm]);

  useEffect(() => {
    if (estimates.length > 0 && activeTab === "estimates") {
      filterEstimates();
    }
  }, [estimates, searchTerm]);

  useEffect(() => {
    // Load inventory data when component mounts
    loadInventory();
  }, []);

  const loadOrders = async () => {
    try {
      setLoading(true);
      const response = await fetch('/api/orders');
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      const data = await response.json();
      setOrders(data.orders || []);
      setError("");
    } catch (error) {
      console.error("Error loading orders:", error);
      setError("Failed to load orders. Please try again.");
      setOrders([]);
    } finally {
      setLoading(false);
    }
  };

  const loadEstimates = async () => {
    try {
      setLoading(true);
      const response = await fetch('/api/estimates');
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      const data = await response.json();
      setEstimates(data.estimates || []);
      setError("");
    } catch (error) {
      console.error("Error loading estimates:", error);
      setError("Failed to load estimates. Please try again.");
      setEstimates([]);
    } finally {
      setLoading(false);
    }
  };

  const loadInventory = async () => {
    try {
      const response = await fetch('/api/inventory');
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      const data = await response.json();
      setInventory(data.inventory || []);
    } catch (error) {
      console.error("Error loading inventory:", error);
    }
  };

  const filterOrders = () => {
    if (!searchTerm.trim()) {
      setFilteredOrders(orders);
      return;
    }

    const filtered = orders.filter(
      (order) =>
        order.order_id.toLowerCase().includes(searchTerm.toLowerCase()) ||
        order.customer_name.toLowerCase().includes(searchTerm.toLowerCase())
    );
    
    setFilteredOrders(filtered);
  };

  const filterEstimates = () => {
    if (!searchTerm.trim()) {
      setFilteredEstimates(estimates);
      return;
    }

    const filtered = estimates.filter(
      (estimate) =>
        estimate.estimate_id.toLowerCase().includes(searchTerm.toLowerCase()) ||
        estimate.customer_name.toLowerCase().includes(searchTerm.toLowerCase())
    );
    
    setFilteredEstimates(filtered);
  };

  const handleTabChange = (tab: "orders" | "estimates") => {
    setActiveTab(tab);
  };

  const formatDate = (dateString: string) => {
    try {
      return format(new Date(dateString), "MM/dd/yyyy");
    } catch (error) {
      return dateString;
    }
  };

  const formatCurrency = (amount: number) => {
    return amount.toLocaleString('en-IN', {
      style: 'currency',
      currency: 'INR',
      maximumFractionDigits: 0,
    });
  };

  const getStatusBadgeColor = (status: string) => {
    switch (status) {
      case "No Estimate":
        return "bg-gray-100 text-gray-800";
      case "Pending":
        return "bg-yellow-100 text-yellow-800";
      case "Processing":
        return "bg-blue-100 text-blue-800";
      case "Completed":
        return "bg-green-100 text-green-800";
      default:
        return "bg-gray-100 text-gray-800";
    }
  };

  const viewOrder = async (orderId: string) => {
    try {
      // Fetch order details
      const response = await fetch(`/api/orders/${orderId}`);
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      const data = await response.json();
      setViewOrderData(data.order);
      setShowViewOrderModal(true);
    } catch (error) {
      console.error("Error loading order details:", error);
      setError("Failed to load order details. Please try again.");
    }
  };

  const editOrder = async (orderId: string) => {
    try {
      // Fetch order details
      const response = await fetch(`/api/orders/${orderId}`);
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      const data = await response.json();
      const order = data.order;
      
      // Prepare order items for editing
      if (order && order.items && Array.isArray(order.items)) {
        order.items = order.items.map((item, index) => ({
          ...item,
          id: index + 1
        }));
        setNextId(order.items.length + 1);
      }
      
      // Set states for editing
      setEditOrderData(order);
      setOrderDate(order.date ? format(new Date(order.date), "yyyy-MM-dd") : "");
      setAgentName(order.agent_name || "Admin User");
      setCustomerName(order.customer_name || "");
      setOrderItems(order.items || []);
      
      // Load products and customers for references
      await loadProducts();
      await loadCustomers();
      
      // Show edit modal
      setShowEditOrderModal(true);
    } catch (error) {
      console.error("Error loading order for editing:", error);
      setError("Failed to load order for editing. Please try again.");
    }
  };

  const closeViewOrderModal = () => {
    setShowViewOrderModal(false);
    setViewOrderData(null);
  };

  const closeEditOrderModal = () => {
    setShowEditOrderModal(false);
    setEditOrderData(null);
    setOrderItems([
      { id: 1, product_code: "", product_name: "", category: "", size: "", quantity: 0, rate: 0, total: 0 }
    ]);
    setOrderError("");
    setNextId(2);
  };

  const updateOrder = async () => {
    try {
      setIsUpdating(true);
      setOrderError("");
      
      if (!editOrderData) {
        setOrderError("No order data found");
        setIsUpdating(false);
        return;
      }
      
      if (!customerName.trim()) {
        setOrderError("Please select a customer");
        setIsUpdating(false);
        return;
      }
      
      if (orderItems.length === 0 || !orderItems[0].product_code) {
        setOrderError("Please add at least one product");
        setIsUpdating(false);
        return;
      }
      
      // Check inventory before submitting
      let inventoryWarnings = [];
      for (const item of orderItems) {
        if (item.product_code) {
          const available = getProductAvailability(item.product_code);
          if (item.quantity > available) {
            inventoryWarnings.push(`${item.product_name}: Requested ${item.quantity}, Available ${available}`);
          }
        }
      }
      
      // Show inventory warning if any items exceed available inventory
      if (inventoryWarnings.length > 0) {
        const proceed = window.confirm(`The following items exceed available inventory:\n\n${inventoryWarnings.join("\n")}\n\nDo you want to proceed anyway?`);
        if (!proceed) {
          setIsUpdating(false);
          return;
        }
      }
      
      const formattedDate = new Date(orderDate).toISOString();
      const total = calculateTotal();
      
      const orderData = {
        order_id: editOrderData.order_id,
        date: formattedDate,
        customer_name: customerName,
        total_amount: total,
        items: orderItems.map(item => ({
          product_code: item.product_code,
          product_name: item.product_name,
          category: item.category,
          size: item.size,
          quantity: item.quantity,
          rate: item.rate,
          total: item.total
        }))
      };
      
      const response = await fetch(`/api/orders/${editOrderData._id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(orderData),
      });
      
      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.error || `Error: ${response.status}`);
      }
      
      // Show success message
      alert(`Order ${editOrderData.order_id} has been updated successfully.`);
      
      await loadOrders();
      closeEditOrderModal();
    } catch (error: any) {
      console.error("Error updating order:", error);
      setOrderError(error.message || "Failed to update order. Please try again.");
    } finally {
      setIsUpdating(false);
    }
  };

  const generateEstimate = async (orderId: string) => {
    try {
      setIsGeneratingEstimate(true);
      
      // Fetch the order details
      const response = await fetch(`/api/orders/${orderId}`);
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      const data = await response.json();
      const order = data.order;
      
      if (!order) {
        throw new Error('Order not found');
      }
      
      setCurrentOrder(order);
      
      // Check if order items exists and ensure it's not empty
      if (!order.items || !Array.isArray(order.items) || order.items.length === 0) {
        throw new Error('Order has no items. Cannot generate estimate.');
      }
      
      // Prepare estimate data
      const estimateData = {
        order_id: order.order_id,
        date: new Date().toISOString(),
        customer_name: order.customer_name,
        agent_name: agentName,
        total_items: order.items.length,
        total_amount: order.total_amount,
        status: 'Pending',
        items: order.items
      };
      
      // Create the estimate
      const createResponse = await fetch('/api/estimates', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(estimateData),
      });
      
      if (!createResponse.ok) {
        const errorData = await createResponse.json();
        throw new Error(errorData.error || `Error: ${createResponse.status}`);
      }
      
      const estimateResult = await createResponse.json();
      const estimateId = estimateResult.estimate?.estimate_id;
      
      // Show success message with estimate number
      if (estimateId) {
        alert(`Estimate ${estimateId} has been generated successfully.`);
      }
      
      // Reload both orders and estimates
      await loadOrders();
      await loadEstimates();
      setActiveTab("estimates");
      
    } catch (error: any) {
      console.error("Error generating estimate:", error);
      setError(error.message || "Failed to generate estimate. Please try again.");
    } finally {
      setIsGeneratingEstimate(false);
      setCurrentOrder(null);
    }
  };

  const viewEstimate = (estimateId: string) => {
    setActiveTab("estimates");
    // Scroll to the estimate in the estimates tab and highlight it
    setTimeout(() => {
      const element = document.getElementById(`estimate-${estimateId}`);
      if (element) {
        element.scrollIntoView({ behavior: 'smooth' });
        element.classList.add('highlight-row');
        setTimeout(() => {
          element.classList.remove('highlight-row');
        }, 2000);
      }
    }, 100);
  };

  // Estimate actions  const viewEstimateDetails = async (estimateId: string) => {    try {      // Fetch estimate details      const response = await fetch(`/api/estimates/${estimateId}`);            if (!response.ok) {        throw new Error(`Error: ${response.status}`);      }            const data = await response.json();      setViewEstimateData(data.estimate);      setShowViewEstimateModal(true);    } catch (error) {      console.error("Error loading estimate details:", error);      setError("Failed to load estimate details. Please try again.");    }  };  const editEstimate = async (estimateId: string) => {    try {      // Fetch estimate details      const response = await fetch(`/api/estimates/${estimateId}`);            if (!response.ok) {        throw new Error(`Error: ${response.status}`);      }            const data = await response.json();      const estimate = data.estimate;            // Prepare estimate items for editing      if (estimate && estimate.items && Array.isArray(estimate.items)) {        estimate.items = estimate.items.map((item, index) => ({          ...item,          id: index + 1        }));      }            // Set data for editing      setEditEstimateData(estimate);      setShowEditEstimateModal(true);    } catch (error) {      console.error("Error loading estimate for editing:", error);      setError("Failed to load estimate for editing. Please try again.");    }  };    const closeViewEstimateModal = () => {    setShowViewEstimateModal(false);    setViewEstimateData(null);  };    const closeEditEstimateModal = () => {    setShowEditEstimateModal(false);    setEditEstimateData(null);  };    const updateEstimate = async () => {    try {      setIsEditingEstimate(true);            if (!editEstimateData) {        throw new Error("No estimate data found");      }            const response = await fetch(`/api/estimates/${editEstimateData._id}`, {        method: 'PUT',        headers: {          'Content-Type': 'application/json',        },        body: JSON.stringify({          customer_name: editEstimateData.customer_name,          agent_name: editEstimateData.agent_name,          status: editEstimateData.status,          items: editEstimateData.items        }),      });            if (!response.ok) {        const errorData = await response.json();        throw new Error(errorData.error || `Error: ${response.status}`);      }            // Show success message      alert(`Estimate ${editEstimateData.estimate_id} has been updated successfully.`);            await loadEstimates();      closeEditEstimateModal();    } catch (error: any) {      console.error("Error updating estimate:", error);      setError(error.message || "Failed to update estimate. Please try again.");    } finally {      setIsEditingEstimate(false);    }  };

  const deleteEstimate = async (estimateId: string) => {
    if (!window.confirm('Are you sure you want to delete this estimate?')) {
      return;
    }
    
    try {
      const response = await fetch(`/api/estimates/${estimateId}`, {
        method: 'DELETE',
      });
      
      if (!response.ok) {
        throw new Error(`Error: ${response.status}`);
      }
      
      // Reload both orders and estimates
      await loadEstimates();
      await loadOrders();
      
    } catch (error) {
      console.error("Error deleting estimate:", error);
      setError("Failed to delete estimate. Please try again.");
    }
  };

  const printEstimate = (estimateId: string, printType: 'estimate' | 'label' | 'both' = 'both') => {
    // Find the estimate to print
    const estimateToPrint = estimates.find(est => est.estimate_id === estimateId);
    
    if (!estimateToPrint) {
      alert("Estimate not found");
      return;
    }
    
    // Create print content with CSS for styling
    const printContent = `
      <html>
        <head>
          <title>Estimate ${estimateId}</title>
          <style>
            @page {
              size: A4;
              margin: 1cm;
            }
            body {
              font-family: Arial, sans-serif;
              margin: 0;
              padding: 0;
              color: #333;
            }
            .page-break {
              page-break-after: always;
            }
            .container {
              width: 100%;
              max-width: 800px;
              margin: 0 auto;
              padding: 20px;
            }
            .header {
              text-align: center;
              margin-bottom: 30px;
              border-bottom: 2px solid #333;
              padding-bottom: 10px;
            }
            .company-name {
              font-size: 24px;
              font-weight: bold;
              margin-bottom: 5px;
            }
            .title {
              font-size: 18px;
              font-weight: bold;
              margin: 15px 0;
            }
            .info-section {
              display: flex;
              justify-content: space-between;
              margin-bottom: 20px;
            }
            .info-block {
              width: 48%;
            }
            table {
              width: 100%;
              border-collapse: collapse;
              margin-bottom: 20px;
            }
            th, td {
              border: 1px solid #ddd;
              padding: 8px;
              text-align: left;
            }
            th {
              background-color: #f2f2f2;
              font-weight: bold;
            }
            .total-row {
              font-weight: bold;
            }
            .footer {
              margin-top: 30px;
              text-align: center;
              font-size: 12px;
              color: #777;
            }
            .signature {
              margin-top: 50px;
              display: flex;
              justify-content: space-between;
            }
            .signature div {
              width: 45%;
            }
            .signature-line {
              border-top: 1px solid #333;
              margin-top: 50px;
              padding-top: 5px;
            }
            /* Label styling */
            .label-container {
              border: 1px solid #333;
              padding: 15px;
              max-width: 300px;
              margin: 0 auto;
            }
            .label-title {
              font-size: 14px;
              font-weight: bold;
              text-align: center;
              margin-bottom: 10px;
            }
            .label-info {
              font-size: 12px;
              margin-bottom: 5px;
            }
            .bold {
              font-weight: bold;
            }
            @media print {
              button {
                display: none;
              }
            }
          </style>
        </head>
        <body>
          ${printType === 'both' || printType === 'estimate' ? `
          <!-- Estimate Page -->
          <div class="container">
            <div class="header">
              <div class="company-name">AMBIKA ENTERPRISE</div>
              <div>GST No: 27AABFA2145K1ZW</div>
              <div>123 Main Street, Mumbai, India</div>
              <div>Phone: +91 98765 43210 | Email: info@ambikaenterprise.com</div>
            </div>
            
            <div class="title">ESTIMATE</div>
            
            <div class="info-section">
              <div class="info-block">
                <div><strong>Estimate #:</strong> ${estimateToPrint.estimate_id}</div>
                <div><strong>Date:</strong> ${format(new Date(estimateToPrint.date), "dd/MM/yyyy")}</div>
                <div><strong>Order #:</strong> ${estimateToPrint.order_id}</div>
              </div>
              <div class="info-block">
                <div><strong>Customer:</strong> ${estimateToPrint.customer_name}</div>
                <div><strong>Agent:</strong> ${estimateToPrint.agent_name}</div>
              </div>
            </div>
            
            <div class="title">Item Details</div>
            
            <table>
              <thead>
                <tr>
                  <th>S.No</th>
                  <th>Product Code</th>
                  <th>Description</th>
                  <th>Size</th>
                  <th>Qty</th>
                  <th>Rate (₹)</th>
                  <th>Amount (₹)</th>
                </tr>
              </thead>
              <tbody>
                ${estimateToPrint.items.map((item, index) => `
                  <tr>
                    <td>${index + 1}</td>
                    <td>${item.product_code}</td>
                    <td>${item.product_name}</td>
                    <td>${item.size || '-'}</td>
                    <td>${item.quantity}</td>
                    <td>${item.rate.toFixed(2)}</td>
                    <td>${item.total.toFixed(2)}</td>
                  </tr>
                `).join('')}
                <tr class="total-row">
                  <td colspan="4">Total</td>
                  <td>${estimateToPrint.items.reduce((sum, item) => sum + item.quantity, 0)}</td>
                  <td></td>
                  <td>₹${estimateToPrint.total_amount.toFixed(2)}</td>
                </tr>
              </tbody>
            </table>
            
            <div class="info-block">
              <div><strong>Total Amount in Words:</strong> ${convertToWords(estimateToPrint.total_amount)} Rupees Only</div>
            </div>
            
            <div class="signature">
              <div>
                <div class="signature-line">Customer Signature</div>
              </div>
              <div>
                <div class="signature-line">For AMBIKA ENTERPRISE</div>
              </div>
            </div>
            
            <div class="footer">
              <p>This is a computer generated estimate and does not require signature.</p>
              <p>Thank you for your business!</p>
            </div>
          </div>
          
          ${printType === 'both' ? '<div class="page-break"></div>' : ''}
          ` : ''}
          
          ${printType === 'both' || printType === 'label' ? `
          <!-- Label Page -->
          <div class="container">
            <div class="label-container">
              <div class="label-title">AMBIKA ENTERPRISE</div>
              <div class="label-info"><span class="bold">Customer:</span> ${estimateToPrint.customer_name}</div>
              <div class="label-info"><span class="bold">Order #:</span> ${estimateToPrint.order_id}</div>
              <div class="label-info"><span class="bold">Estimate #:</span> ${estimateToPrint.estimate_id}</div>
              <div class="label-info"><span class="bold">Date:</span> ${format(new Date(estimateToPrint.date), "dd/MM/yyyy")}</div>
              <div class="label-info"><span class="bold">Agent:</span> ${estimateToPrint.agent_name}</div>
              <div class="label-info"><span class="bold">Items:</span> ${estimateToPrint.total_items}</div>
              <div class="label-info"><span class="bold">Total:</span> ₹${estimateToPrint.total_amount.toFixed(2)}</div>
            </div>
            
            <div style="text-align: center; margin-top: 20px;">
              <button onclick="window.print()" style="padding: 8px 16px; background: #4a86e8; color: white; border: none; border-radius: 4px; cursor: pointer;">
                Print
              </button>
            </div>
          </div>
          ` : ''}
        </body>
      </html>
    `;
    
    // Create a new window for printing
    const printWindow = window.open('', '_blank');
    if (printWindow) {
      printWindow.document.open();
      printWindow.document.write(printContent);
      printWindow.document.close();
      
      // Wait for content to load before printing
      printWindow.onload = function() {
        setTimeout(() => {
          printWindow.print();
        }, 500);
      };
    } else {
      alert("Please allow pop-ups to print the estimate.");
    }
