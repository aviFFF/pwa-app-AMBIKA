  // Helper function to convert numbers to words for total amount
  const convertToWords = (num: number) => {
    const units = ['', 'One', 'Two', 'Three', 'Four', 'Five', 'Six', 'Seven', 'Eight', 'Nine'];
    const teens = ['Ten', 'Eleven', 'Twelve', 'Thirteen', 'Fourteen', 'Fifteen', 'Sixteen', 'Seventeen', 'Eighteen', 'Nineteen'];
    const tens = ['', '', 'Twenty', 'Thirty', 'Forty', 'Fifty', 'Sixty', 'Seventy', 'Eighty', 'Ninety'];
    
    // Round to 2 decimal places
    const amount = Math.round(num * 100) / 100;
    const intPart = Math.floor(amount);
    const decPart = Math.round((amount - intPart) * 100);
    
    let result = '';
    
    if (intPart === 0) {
      result = 'Zero';
    } else {
      // Convert lakhs (100,000s)
      if (intPart >= 100000) {
        const lakhs = Math.floor(intPart / 100000);
        result += convertToWords(lakhs) + ' Lakh ';
        num = intPart % 100000;
      } else {
        num = intPart;
      }
      
      // Convert thousands
      if (num >= 1000) {
        const thousands = Math.floor(num / 1000);
        result += convertToWords(thousands) + ' Thousand ';
        num %= 1000;
      }
      
      // Convert hundreds
      if (num >= 100) {
        const hundreds = Math.floor(num / 100);
        result += units[hundreds] + ' Hundred ';
        num %= 100;
      }
      
      // Convert tens and units
      if (num > 0) {
        if (result !== '') {
          result += 'and ';
        }
        
        if (num < 10) {
          result += units[num];
        } else if (num < 20) {
          result += teens[num - 10];
        } else {
          const ten = Math.floor(num / 10);
          const unit = num % 10;
          result += tens[ten];
          if (unit > 0) {
            result += ' ' + units[unit];
          }
        }
      }
    }
    
    // Add decimal part if exists
    if (decPart > 0) {
      result += ' and ' + decPart + '/100';
    }
    
    return result;
  };

